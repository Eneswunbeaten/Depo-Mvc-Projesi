@using MvcStok.Models.Entity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Kategori>;
<h2>Kategoriler</h2>
<table class="table">
    <tr>
        <th scope="col" colspan="2">#</th>
        <th scope="col" colspan="2">Kategori Adı</th>
        <th scope="col">Düzenle</th>
        <th scope="col">Kaldır</th>
    </tr>

@foreach(var kategori in Model)
{
   <tr>
       <th scope="row" colspan="2">@kategori.KategoriId</th>
       <td colspan="2">@kategori.KategoriAd</td>
       <td><a class="btn btn-primary"asp-action="Guncelle" asp-route-id="@kategori.KategoriId">Güncelle</a></td>
       <td><a class="btn btn-warning"asp-action="Kaldir" asp-route-id="@kategori.KategoriId">Kaldır</a></td>

   </tr>
}
</table>
<p>Toplam @Model.Count Kategori bulunuyor</p>
<a class="btn btn-primary" asp-action="Ekle">Kategori Ekle</a>