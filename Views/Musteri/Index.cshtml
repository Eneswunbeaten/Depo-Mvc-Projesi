@using MvcStok.Models.Entity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Musteri>;
<h2>Müşteriler</h2>
<table class="table">
    <tr>
        <th scope="col" colspan="2">#</th>
        <th scope="col" colspan="2">Ad</th>
        <th scope="col" colspan="2">Soyad</th>
        <th scope="col">Düzenle</th>
        <th scope="col">Kaldır</th>
    </tr>

    @foreach (var musteri in Model)
    {
        <tr>
            <th scope="row" colspan="2">@musteri.MusteriId</th>
            <td colspan="2">@musteri.MusteriAd</td>
            <td colspan="2">@musteri.MusteriSoyad</td>
            <td><a class="btn btn-primary" asp-action="Guncelle" asp-route-id="@musteri.MusteriId">Güncelle</a></td>
            <td><a class="btn btn-warning" asp-action="Kaldir" asp-route-id="@musteri.MusteriId">Kaldır</a></td>

        </tr>
    }
</table>
<p>Toplam @Model.Count Müşteri bulunuyor</p>
<a class="btn btn-primary" asp-action="Ekle">Müşteri Ekle</a>