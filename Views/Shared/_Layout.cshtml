<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark bg-body-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><b>Stok Takip Projesi</b></a>
    
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Kategori" asp-action="Index"><b>Kategoriler</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Musteri" asp-action="Index"><b>Müşteriler</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Urun" asp-action="Index"><b>Ürünler</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Satis" asp-action="Index"><b>Satışlar</b></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <br />
    <div>
        @RenderBody()
    </div>
</body>
</html>
